{
    "manifest_version": 2,
    "name": "User Agent Manager",
    "version": "0.0.1",
    "description": "A extension that modify the request headers, switching while necessary to the selected User-Agent",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background":{
        "scripts":["background.js"],
        "persistent":true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "<all_urls>"
    ]
  }
  